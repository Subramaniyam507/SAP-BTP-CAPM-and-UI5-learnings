<anubhav:View xmlns:anubhav="sap.ui.core.mvc" xmlns="sap.m" xmlns:t="sap.ui.table"
controllerName="mickey.controller.Main" xmlns:core="sap.ui.core" xmlns:form="sap.ui.layout.form">
    <Button text="{i18n>XBUT_ADDCOL}" press="onAddCol" />
    <Switch change="onFlipFlop" tooltip="{i18n>XBUT_FLIP}"></Switch>
    <!-- Since rows is the agg. of the table, we are doing agg. binding -->
    <!-- removed code for binding rows="{path : '/empTable'}"  -->
    <t:Table id="myTable" 
    visibleRowCount="5" 
    selectionMode="Single" rowSelectionChange="onSelectRow">
    <!-- aggregation columns to add MULTIPLE columns in  table -->
        <t:columns>
            <!-- First Column from Column class -->
            <t:Column>
                <!-- Adding label to the column via aggregation -->
                <t:label>
                    <Label text="{i18n>XFLD_EMPID}" />
                </t:label>
                <!-- Provide template aggregation -->
                <!-- type of the column - text, input, checkbox etc. -->
                <!-- where it will take data from -->
                <t:template>
                    <Text text="{empId}" />
                </t:template>
            </t:Column>
            <!-- Second column inside columns aggregation with label as alttype = string -->
            <t:Column label="{i18n>XFLD_EMPNAME}">
                <t:template>
                <!-- 2nd syntax of binding -->
                    <Input value="{path : 'empName',
                                   formatter: '.myReuse.convertToLarge'
                    }" enabled="{= ${salary} > 50000 ? false : true}"/>
                </t:template>
            </t:Column>
            <!-- Employee Salary -->
            <t:Column label="{i18n>XFLD_SALARY}">
                <t:template>
                    <Text text="{parts: [{path: 'salary'},{path: 'currency'}],
                                formatter: '.myReuse.formatCurrency'}" />
                </t:template>
            </t:Column>
            <!-- Currency -->
            <t:Column label="{i18n>XCOL_SMK}">
                <t:template>
                    <!-- system always expect a boolean data -->
                    <!-- Convert the string value to boolean data @ runtime -->
                    <CheckBox ></CheckBox>
                </t:template>
            </t:Column>
            <!-- gender -->
            <t:Column label="{i18n>XCOL_GEN}">
                <t:template>
                    <Image src="{gender}" width="35px" height="35px"/>
                </t:template>
            </t:Column>
            <!-- drop down to choose marital status -->
            <t:Column label="{i18n>XCOL_MSTAT}">
                <t:template>
                    <Select selectedKey="{mStat}">
                        <items>
                            <core:Item key="M" text="Married"></core:Item>
                            <core:Item key="S" text="Single"></core:Item>
                            <core:Item key="U" text="Undisclosed"></core:Item>
                        </items>
                    </Select>
                </t:template>
            </t:Column>
            <t:Column label="{i18n>XCOL_RATE}">
                <t:template>
                    <RatingIndicator value="{path: 'rating', formatter: '.myReuse.converge'}"></RatingIndicator>
                </t:template>
            </t:Column>


        </t:columns>
    </t:Table>
    <form:SimpleForm editable="true" id="idSimple"> 
        <form:content>
            <Label text="{i18n>XFLD_EMPID}" />
            <Input width="20%" id="idEmpId" value="{empId}" ></Input>
            <Label text="{i18n>XFLD_EMPNAME}" />
            <!-- here we are binding with named model in ui5 app -->
            <Input width="30%" id="idEmpName" value="{path: 'empName'}" ></Input>
            <Label text="{i18n>XFLD_SALARY}" />
            <Input width="25%" id="idSal" enabled="{= ${/empStr/empName} === 'Anubhav' ? false : true}" ></Input>
            <Label text="{i18n>XFLD_CURR}" />
            <Input width="25%" id="idCurr"></Input>
            <Label text="{i18n>XCOL_SMK}" />
            <CheckBox id="idSmoker" ></CheckBox>
            <Label/>
            <Button text="{i18n>XBUT_PRINT}" press="onPrintData" width="30%"/>
            <Button text="{i18n>XBUT_CHANGE}" press="onChangeData" width="30%"/>
            <Button text="{i18n>XBUT_MAGIC}" press="itsMagic" width="30%" id="idMagic"/>
            <Button text="{i18n>XBUT_SHOW}" press="Show"></Button>
        </form:content>
    </form:SimpleForm>
    <Input id="idXMLField" width="40%"/>
    <Button text="Click XML Button" press="onClickButton" />
</anubhav:View>
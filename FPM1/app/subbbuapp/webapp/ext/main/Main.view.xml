<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:macros="sap.fe.macros" xmlns:html="http://www.w3.org/1999/xhtml" controllerName="com.subbu.subbbuapp.ext.main.Main" xmlns:l="sap.ui.layout"
	xmlns:f="sap.f">
 
    <f:DynamicPage id="FilterBarDefault" class="sapUiResponsiveContentPadding">
		<f:title>
			<f:DynamicPageTitle id="_IDGenDynamicPageTitle1">
				<f:heading>
					<Title id="_IDGenTitle1" text="Filter Bar" level="H2" />
				</f:heading>
				<f:snappedContent>
				<Panel headerText="Highest Price" id="idPanel1">
				<HeaderContainer scrollStep="200" showDividers="false" id="idHeaderContainer" content="{
				path: '/Travel',
				parameters:{
				$filter: 'TravelStatus_code eq \'O\' and IsActiveEntity eq false or SiblingEntity/IsActiveEntity eq null'},
				$orderby:'TotalPrice desc'

				
				}"
				
				> 
				<GenericTile id="_IDGenGenericTile" header = "Travel {TravelID}" subheader="{Description}" >
				<TileContent id="_IDGenTileContent"
					
					footer="{to_Customer/LastName}"
					unit="{CurrencyCode}"
				>
					<NumericContent id="_IDGenNumericContent"
						
						value="{TotalPrice}"
						valueColor="Good"
						scale="k"
						
					>
						
					</NumericContent>
				</TileContent>
				</GenericTile>

				</HeaderContainer>
				</Panel>
					<Panel headerText="Filter Count" id="idPanel2">
					<Text id="_IDGenText" text="{fbConditions>/filtersTextInfo}" />
					</Panel>
				
					
				</f:snappedContent>
			</f:DynamicPageTitle>
		</f:title>
		<f:header>
			<f:DynamicPageHeader id="_IDGenDynamicPageHeader1" pinnable="true">
				<VBox id="_IDGenVBox1">
					<macros:FilterBar id="FilterBar" metaPath="/Travel/@com.sap.vocabularies.UI.v1.SelectionFields"
                
                    filterChanged="onFilterBarFilterChanged"/>
				</VBox>
			</f:DynamicPageHeader>
		</f:header>
		<f:content>
			  <macros:Table id= "tablid" metaPath="/Travel/@com.sap.vocabularies.UI.v1.LineItem" filterBar="FilterBar"></macros:Table>
		</f:content>
	</f:DynamicPage>
</mvc:View>